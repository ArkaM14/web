doctype xml
urlset(xmlns="http://www.sitemaps.org/schemas/sitemap/0.9")
  url
    - var homeUrl = 'https://arkam.me'
      loc= homeUrl
  url
    - var blogUrl = 'https://arkam.me/blog'
      loc= blogUrl
  each post in posts
    - var fullUrl = 'https://arkam.me' + post.url
      url
        loc= fullUrl
