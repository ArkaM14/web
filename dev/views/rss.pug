doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Arka Maitra
    link https://arkam.me/
    description Arka Maitra
    atom:link(href='https://arkam.me/rss' + tagUrl, rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'https://arkam.me' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
