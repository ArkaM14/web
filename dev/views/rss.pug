doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Sumit Maitra
    link https://sumitmaitra.com/
    description Sumit Maitra
    atom:link(href='https://sumitmaitra.com/rss' + tagUrl, rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'https://sumitmaitra.com' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
